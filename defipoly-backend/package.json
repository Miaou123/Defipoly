{
  "name": "defipoly-profile-api",
  "version": "1.0.0",
  "description": "Profile storage API for Defipoly",
  "main": "server.js",
  "scripts": {
    "prestart": "node src/scripts/kill-port.js",
    "start": "node server.js",
    "predev": "node src/scripts/kill-port.js",
    "dev": "nodemon server.js",
    "kill-port": "node src/scripts/kill-port.js",
    "sync-blockchain": "node src/scripts/sync-blockchain-data.js",
    "setup:full": "node src/scripts/setup-full.js",
    "verify-sync": "node src/scripts/verify-complete-sync.js",
    "periodic-sync": "node src/scripts/periodic-sync.js",
    "pm2:start": "pm2 start server.js --name defipoly-api",
    "pm2:stop": "pm2 stop defipoly-api",
    "pm2:restart": "pm2 restart defipoly-api",
    "pm2:logs": "pm2 logs defipoly-api",
    "db:optimize": "node optimize-sqlite.js optimize",
    "db:backup": "node optimize-sqlite.js backup",
    "db:health": "node optimize-sqlite.js health"
  },
  "keywords": [
    "defipoly",
    "solana",
    "profile"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/web3.js": "^1.98.4",
    "axios": "^1.12.2",
    "bs58": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "multer": "^1.4.5-lts.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.6",
    "tweetnacl": "^1.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/multer": "^2.0.0",
    "nodemon": "^3.0.1"
  }
}
